<h1>New User</h1>

<%= form_tag('/users') do %>

  <%= label_tag 'username' %>
  <%= text_field_tag 'username' %>
  <br><br>

  <%= label_tag 'email' %>
  <%= text_field_tag 'email' %>
  <br><br>

  <%= label_tag 'password' %>
  <%= password_field_tag 'password' %>
  <br><br>

  <%= submit_tag "Save User" %>

<% end %>


